<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="489.0" prefWidth="445.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <TextField fx:id="textfNombre" />
      <TextField fx:id="texfEdad" />
      <Label text="Primary View" />
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" />
      <TableView fx:id="tablaCliente" onMouseClicked="#evento" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="columnaNombre" prefWidth="189.0" text="Nombre" />
          <TableColumn fx:id="columnaEdad" prefWidth="215.0" text="Edad" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
